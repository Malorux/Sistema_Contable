    <Grid>
        <TabControl  Margin="5" BorderBrush="Transparent" Background="Transparent" >

            <TabItem Header="Catálogo de cuenta" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="1" x:Name="MuestraCuenta" Visibility="{Binding Boton, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}" Style="{StaticResource PruebaButton}" Content="Mostrar Catalogo" Height="40" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding CommanCargarCuenta}"/>
                    <mah:ProgressRing Grid.Row="1" Visibility="{Binding Progreso , Mode=TwoWay ,NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}" x:Name="Progreso" Foreground="Blue" IsActive="True" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <DataGrid x:Name="MyGrid" Visibility="{Binding Tabla,NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}" ItemsSource="{Binding _listaCuenta}" CanUserAddRows="False" SelectionUnit="FullRow" SelectionMode="Single">
                        
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Editar Cuenta" Command="{Binding MyCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItem}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind = "Add" Width="25" Height="25" Foreground="Black"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Editar Cuenta" Command="{Binding MyCommand2}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItem}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind = "Add" Width="25" Height="25" Foreground="Black"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                        
                        
                    </DataGrid>



                </Grid>

            </TabItem>

            <TabItem Header="Comprobantes Contables">
                
                 <Grid x:Name="ViewComprobante" Margin="0 10 0 0"  Background="White">

                    <Grid x:Name="Gridprincipal" Visibility="Visible">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <Grid x:Name="ComprobanteA" Grid.Row="0"   >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="CambioA" Width="220" Height="50" HorizontalAlignment="Right"  Grid.Column="1" Style="{StaticResource PruebaButton}" Content="Nuevo Comprobante" Click="Comprobantes_Click" Margin="0 5 10 0" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <syncfusion:SfDataGrid x:Name="AsientoContableDataGrid"   VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"   SelectionMode = "None"  IsEnabled = "True"  Margin="10 20 10 20" ColumnSizer="Star"  AllowResizingColumns="True" AllowFiltering="True" >
                                <syncfusion:SfDataGrid.Columns>
                                    <syncfusion:GridNumericColumn MappingName = "IdAsiento"  HeaderText = "ID Asiento"  NumberDecimalDigits="0"/>
                                    <syncfusion:GridNumericColumn MappingName = "IdUsuario"  HeaderText = "ID Usuario"  NumberDecimalDigits="0"/>
                                    <syncfusion:GridDateTimeColumn MappingName = "FechaRegistro" HeaderText = "Fecha Registro" />
                                    <syncfusion:GridTextColumn MappingName = "Descripcion"  HeaderText = "Descripcion"/>
                                </syncfusion:SfDataGrid.Columns>
                            </syncfusion:SfDataGrid>
                        </Grid>
                    </Grid>

                    <Grid x:Name="Gridsecundario" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="AUTO" MinWidth="302"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="AUTO"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="AUTO"/>
                                    <RowDefinition Height="AUTO"/>
                                </Grid.RowDefinitions>

                                <Label Content="Fecha :" Grid.Row="0" Grid.Column="0" Margin="0 2 0 0" FontSize="16" />
                                <DatePicker x:Name="Fecha_registro" Grid.Row="0" Grid.Column="1" Margin="0 2 80 0"  />
                                <Label Content="Descripcion :" Grid.Row="1" Grid.Column="0"  Margin="0 10 0 20" FontSize="16"/>
                                <TextBox x:Name="Descripcion_Comprobante" Grid.Row="1" Grid.Column="1" Margin="0 10 0 20" />
                            </Grid>

                            <Grid Grid.Row="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto" MinHeight="80"/>
                                </Grid.RowDefinitions>

                                <syncfusion:SfDataGrid x:Name="secondDataGrid" SelectionMode = "Single"   IsEnabled = "True"  Margin="10 0 10 20"  ColumnSizer="Star"  AllowResizingColumns="True"  AllowFiltering="True"  AutoGenerateColumns="False" AutoGenerateColumnsMode="None" CurrentCellEndEdit="secondDataGrid_CurrentCellEndEdit"  >
                                    <syncfusion:SfDataGrid.Columns >
                                        <syncfusion:GridTemplateColumn HeaderText=" " ColumnSizer="SizeToHeader" AllowFiltering="False">
                                            <syncfusion:GridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="AgregarMovButton"  BorderBrush="#00000000" Background="#00000000" BorderThickness="0" >
                                                        <materialDesign:PackIcon Kind="Delete" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                    </Button>
                                                </DataTemplate>
                                            </syncfusion:GridTemplateColumn.CellTemplate>
                                        </syncfusion:GridTemplateColumn>
                                        <syncfusion:GridNumericColumn  HeaderText="Id Cuenta" NumberDecimalDigits="0" MappingName="Id_Cuenta"/>
                                        <syncfusion:GridTextColumn HeaderText="Cuenta" MappingName="Nombre_CuentaC" />
                                        <syncfusion:GridCurrencyColumn x:Name="Sdebe" HeaderText="Debe" CurrencyDecimalDigits="4" CurrencySymbol="C$" AllowEditing="True" MappingName="Debe" AllowFiltering="False" />
                                        <syncfusion:GridCurrencyColumn x:Name="Shaber" HeaderText="Haber" CurrencyDecimalDigits="4" CurrencySymbol="C$" AllowEditing="True" MappingName="Haber" AllowFiltering="False" />
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>

                                <Grid Grid.Row="1">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Button x:Name="Registro" Content="Registrar" Grid.Column="0" Grid.Row="0" Margin="10 0 10 0" BorderThickness="0" Background="Transparent" BorderBrush="Transparent" FontSize="15" Click="Comprobantes_Click" />
                                        <Button x:Name="Borrar_todo" Content="Borrar todo" Grid.Column="1" Grid.Row="0" Margin="10 0 10 0" BorderThickness="0" Background="Transparent" BorderBrush="Transparent" FontSize="15" Click="Comprobantes_Click" />
                                        <Button x:Name="Cancelar" Content="Cancelar" Grid.Column="0" Margin="10,65,10,0" Background="Transparent" BorderBrush="Transparent" FontSize="15" Grid.ColumnSpan="2" Grid.RowSpan="2" Click="Comprobantes_Click"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <TextBox x:Name="Total_Debe" Grid.Column="0" Grid.Row="0" Margin="5 10 5 10" IsReadOnly="True" />
                                            <Label Content="Total Debe" Grid.Column="0" Grid.Row="1"/>
                                            <TextBox x:Name="Total_Haber" Grid.Column="1" Grid.Row="0" Margin="5 10 5 10" IsReadOnly="True" />
                                            <Label Content="Total Haber" Grid.Column="1" Grid.Row="1"/>

                                        </Grid>

                                    </Grid>

                                </Grid>

                            </Grid>

                        </Grid>

                        <Grid Grid.Column="1" HorizontalAlignment="Center" >
                            <syncfusion:SfDataGrid  x:Name="firstDataGrid"  SelectionMode = "Single"  IsEnabled = "True"  Margin="0 10 0 10" ColumnSizer="Star"   >
                                <syncfusion:SfDataGrid.Columns>
                                    <syncfusion:GridTemplateColumn HeaderText=" " ColumnSizer="SizeToHeader">
                                        <syncfusion:GridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button  x:Name="AgregarMovButton"  BorderBrush="#00000000" Background="#00000000" BorderThickness="0" >
                                                    <materialDesign:PackIcon Kind="Cross" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                </Button>
                                            </DataTemplate>
                                        </syncfusion:GridTemplateColumn.CellTemplate>
                                    </syncfusion:GridTemplateColumn>
                                    <syncfusion:GridNumericColumn HeaderText="Id Cuenta" MappingName="Id_Cuenta" NumberDecimalDigits="0" AllowFiltering="True" ColumnSizer="SizeToHeader"/>
                                    <syncfusion:GridTextColumn HeaderText="Cuenta" MappingName="Nombre_CuentaC" AllowFiltering="True" ColumnSizer="SizeToHeader"/>
                                </syncfusion:SfDataGrid.Columns>
                            </syncfusion:SfDataGrid>
                        </Grid>

                    </Grid>

                </Grid>
            
            </TabItem>

