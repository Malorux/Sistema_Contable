                                <GridViewColumn Header="Michaell">

                                </GridViewColumn>
                            </GridView>
                            
                        </ListView.View>
                        -->
                    <!--<ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBox Width="100"/>
                            </DataTemplate>
                            
                        </ListView.ItemTemplate>-->
                    <!--

                        
                    </ListView>-->
                </Grid>
            </TabItem>
            <TabItem Header="Libro Diario"/>
            <TabItem Header="Reporte Contable"/>
        </TabControl>
    </Grid>




</Page>
